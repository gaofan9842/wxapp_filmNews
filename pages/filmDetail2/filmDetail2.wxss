@import "../../comm/style/animation.wxss";
/* @import "../../component/message/message.wxss"; */
@import "../../component/cinemaList/cinemaList.wxss";
.fd-hd {
    position: relative;
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    overflow: hidden;
    margin-top: -200rpx;
}

.fd-hd:before {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 600rpx;
    background-color: rgba(0, 0, 0, .6);
}

.fd-hd-bg {
    position: absolute;
    z-index: -2;
    left: 0;
    top: 0;
    width: 100%;
    height: 600rpx;
    background-size: cover;
    background-position: center;
    filter: blur(30rpx);
    transform: scale(1.2);
}

.fd-favorite {
    margin-left: 500rpx;
    box-sizing: border-box;
    position: absolute;
    z-index: 99;
    bottom: 30rpx;
    left: 120rpx;
    width: 50rpx;
    height: 50rpx;
    padding: 10rpx 30rpx;
    padding-left: 60rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-image: url(data:image/png;base64,);
    background-size: 40rpx;
    color: #fff;
    transition: left .3s, color .3s, background-image .3s;
}

.fd-favorite-active {
    left: 120rpx;
    width: 50rpx;
    height: 50rpx;
    background-image: url(data:image/png;base64,);
    color: #f4ea2a;
}
.fd-cover {
    z-index: 9999;
    width: 300rpx;
    height: 420rpx;
    margin-top: 80rpx;
    border-radius: 8rpx;
    box-shadow: 0 30rpx 150rpx rgba(255, 255, 255, .3)
}

.fd-intro {
    z-index: 2;
    width: 320rpx;
    margin-top: 80rpx;
    margin-left: 40rpx;
    color: #fff;

}

.fd-title {
    margin-bottom: 25rpx;
    font-size: 42rpx;
}

.fd-intro-txt {
    margin-bottom: 10rpx;
    color: #eee;
    font-size: 28rpx;
}

.fd-ratingNum {
  font-size: 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: rgb(253, 163, 46);
  line-height: 50rpx;
  margin-top: -43rpx;
  margin-left: 140rpx;
}

.fd-data {
    display: flex;
    height: 150rpx;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
}

.fd-data-item {
    width: 33.33%;
    text-align: center;
}

.fd-data-item {
    border-left: 1px solid #eee;
}

.fd-data-item:first-child {
    border-left: none;
}

.fd-data-num {
    font-size: 40rpx;
    font-weight: 100;
    color: #444;
}

.fd-data-title {
    color: #999;
}

.fd-bd {
    padding: 0 40rpx 40rpx;
}

.fd-bd-title {
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #444;
}

.fd-bd-intro {
    text-align: justify;
    line-height: 1.5;
    color: #666;
    font-size: 28rpx;
}
.fd-bd-intro-null {
    text-align: center;
    line-height: 1.5;
    color: #666;
    font-size: 28rpx;
}

.fd-bd-person {
    width: 90%;
    height: 500rpx;
    white-space: nowrap;
    flex-direction: column;
    overflow-x: scroll;
    overflow-y: hidden;
}

.fd-bd-person-item {
    display: inline-block;
    margin-left: 10rpx;
    text-align: center;
    width: 45%;
    overflow: hidden;

}

.fd-bd-person-item:first-child {
    margin-left: 0;
}

.fd-bd-person-avatar {
    width: 280rpx;
    height: 400rpx;
    
}

.fd-bd-person-name {
    color: #666;
    font-size: 32rpx;
    width: 100rpx;
    flex-wrap: wrap;
    text-align: center;
    margin-left: 10rpx;
}/* pages/filmDetail2/filmDetail2.wxss */